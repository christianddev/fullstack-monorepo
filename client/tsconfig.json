{
  "compilerOptions": {
    "composite": true,
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "target": "es5",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@root/lib": [
        "../packages/lib/src",
      ],
    },
  },
  "include": [
    "src",
    ".eslintrc.*",
  ],
  "exclude": [
    "node_modules",
    "build",
  ],
  "references": [
    {
      "path": "../packages/lib/tsconfig.json"
    }
  ]
}