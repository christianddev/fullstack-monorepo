{
  "configurations": [
    {
      "command": "yarn dev",
      "name": "dev",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "command": "yarn workspace server dev",
      "name": "server",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceRoot}/server"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/client"
    },
    {
      "type": "msedge",
      "request": "launch",
      "name": "edge",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/client",
      "version": "stable"
    }
  ]
}
