    {
      "command": "yarn workspace server dev",
      "name": "server",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "command": "yarn jest ${fileBasename}",
      "name": "jest $file",
      "request": "launch",
      "type": "node-terminal"
    }
  ]
}
