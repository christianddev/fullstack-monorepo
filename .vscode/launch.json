      "command": "yarn workspace server dev",
      "name": "client:server",
      "request": "launch",
      "type": "node-terminal",
      "preLaunchTask": "client.watch"
    },
    {
      "command": "yarn workspace client dev",
      "name": "client",
      "request": "launch",
      "type": "node-terminal",
