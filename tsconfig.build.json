{
    "compilerOptions": {
        "allowJs": true,
        "skipLibCheck": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@root/*": [
                "packages/*/src",
            ],
        },
    },
    "exclude": [
        "node_modules",
        "**/node_modules",
        "**/dist",
        "**/build",
        "**/tests",
        "**/*.js",
    ]
}