{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@shared/*": ["../packages/*/src"]
    }
  },
  "include": ["src", ".eslintrc.js", "package.json"],
  "exclude": ["dist", "node_modules"],
  "references": [
    {
      "path": "../packages/lib/tsconfig.json"
    }
  ]
}
