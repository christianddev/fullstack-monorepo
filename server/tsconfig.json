{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "resolveJsonModule": true,
    "lib": [
      "es6",
      "dom",
      "es2019.array"
    ],
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": "src"
  },
  "include": [
    "**/*.ts",
    "../packages/**/*.ts",
    ".eslintrc.js",
    "package.json"
  ],
  "exclude": [
    "dist",
    "build",
    "coverage",
    "node_modules"
  ],
}