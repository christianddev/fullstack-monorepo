{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "resolveJsonModule": true,
    "lib": [
      "es6",
      "dom",
      "es2019.array"
    ],
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@root/*": [
        "../packages/*",
      ]
    },
  },
  "include": [
    "**/*.ts",
    ".eslintrc.js",
    "./package.json"
  ],
  "exclude": [
    "dist",
    "build",
    "coverage",
    "node_modules"
  ],
}