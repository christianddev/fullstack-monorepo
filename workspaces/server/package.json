{
  "name": "server",
  "version": "1.0.3",
  "private": true,
  "description": "Automated Express Backend",
  "main": "dist/index.js",
  "scripts": {
    "build": "yarn tsc --build && NODE_ENV=production yarn webpack",
    "start": "node dist/index.js",
    "mon": "NODE_ENV=development yarn nodemon -r tsconfig-paths/register -q src/index.ts",
    "watch": "NODE_ENV=development yarn webpack watch",
    "dev": "docker compose up --wait && yarn tsc --build && yarn concurrently \"yarn watch\" \"yarn mon\"",
    "test": "NODE_ENV=test yarn jest",
    "migrator": "yarn ts-node src/shared/db/migrator.ts",
    "clean": "rm -rf node_modules dist"
  },
  "dependencies": {
    "auth0": "^2.44.0",
    "axios": "^0.27.2",
    "bufferutil": "^4.0.7",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-basic-auth": "^1.2.1",
    "express-jwt": "^7.7.5",
    "http-status": "^1.5.2",
    "jsonwebtoken": "^9.0.0",
    "jwks-rsa": "^2.1.4",
    "openapi-types": "^12.0.2",
    "pg": "^8.7.3",
    "sequelize": "^6.19.1",
    "socket.io": "^4.5.4",
    "swagger-jsdoc": "^6.2.5",
    "swagger-ui-express": "^4.4.0",
    "umzug": "^3.2.1",
    "utf-8-validate": "^5.0.10",
    "uuid": "^8.3.2",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@jest/types": "^29.3.1",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-unless": "^0.5.3",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^18.11.13",
    "@types/sequelize": "^4.28.14",
    "@types/swagger-jsdoc": "^6",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.4",
    "@types/webpack-node-externals": "^2.5.3",
    "concurrently": "^7.2.0",
    "dotenv": "^16.0.1",
    "dotenv-webpack": "^8.0.1",
    "eslint": "^8.19.0",
    "fork-ts-checker-webpack-plugin": "^7.2.13",
    "generate-package-json-webpack-plugin": "^2.6.0",
    "jest": "^29.3.1",
    "node-polyfill-webpack-plugin": "^2.0.1",
    "nodemon": "^2.0.16",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^4.10.0",
    "webpack-node-externals": "^3.0.0"
  },
  "peerDependencies": {
    "ts-node-dev": "*"
  }
}
