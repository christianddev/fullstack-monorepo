{
  "compilerOptions": {
    "composite": true,
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021"],
    "removeComments": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@shared/lib": ["../lib/src"]
    }
  },
  "include": ["src", ".eslintrc.js", "package.json", "config/*.json"],
  "exclude": ["dist", "node_modules", "../../node_modules"],
  "references": [
    {
      "path": "../lib/tsconfig.json"
    }
  ]
}
