{
  "compilerOptions": {
    "removeComments": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@shared/lib": ["../lib/src"]
    }
  },
  "include": ["src", ".eslintrc.js", "package.json", "config/app.json"],
  "exclude": ["dist", "node_modules", "../../node_modules"],
  "references": [
    {
      "path": "../lib/tsconfig.json",
      "prepend": true
    }
  ]
}
