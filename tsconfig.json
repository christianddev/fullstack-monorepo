{
    "compilerOptions": {
        "composite": true,
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "outDir": "dist",
        "paths": {
            "@root/*": [
                "./packages/*",
            ]
        },
    },
    "include": [
        "**/package.json"
    ],
    "exclude": [
        "**/**/node_modules",
        "**/**/dist",
        "**/node_modules",
        "**/coverage",
        "**/dist",
        "**/build",
        "**/tests",
        "**/*.spec.ts",
        "**/craco.config.js"
    ]
}