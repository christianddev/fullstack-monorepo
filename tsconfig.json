{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "sourceMap": true,
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noEmitOnError": true,
        "jsx": "preserve",
        "baseUrl": ".",
        "declaration": true,
        "declarationMap": false,
        "listEmittedFiles": true,
        "paths": {
            "@root/*": [
                "./packages/*/src"
            ]
        }
    },
    "include": [
        "packages/",
        "packages/client/src",
    ],
    "exclude": [
        "**/node_modules",
        "**/coverage",
        "**/dist",
        "**/build",
        "**/tests",
        "**/*.spec.ts"
    ]
}