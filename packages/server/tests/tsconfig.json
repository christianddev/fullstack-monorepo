{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "noEmit": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@shared/*": ["../../packages/*/src"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "../../node_modules"]
}
