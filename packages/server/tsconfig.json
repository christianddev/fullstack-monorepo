{
  "compilerOptions": {
    "incremental": true,
    "removeComments": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@shared/lib": ["../lib/src"]
    }
  },
  "include": ["src", ".eslintrc.js", "package.json", "setup/db.json"],
  "exclude": ["dist", "node_modules", "../node_modules"],
  "references": [
    {
      "path": "../lib/tsconfig.json"
    }
  ]
}
