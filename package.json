  },
  "license": "ISC",
  "private": true,
  "workspaces": [
    "packages/*",
    "client",
    "server"
  ],
  "outDir": "dist",
  "scripts": {
    "start": "node start.js",
    "dev": "NODE_ENV=development yarn install && docker compose up --wait && concurrently \"yarn server\" \"yarn client\"",
    "client": "yarn workspace client start",
    "server": "yarn workspace server dev",
    "build": "yarn workspace server build && yarn workspace client build",
    "lint": "eslint .",
    "test": "yarn jest",
    "prettify": "yarn prettier . --write",
    "clean": "rm -rf node_modules **/*/node_modules package-lock.json yarn.lock **/*/dist **/*/build"
  },
  "devDependencies": {
    "@jest/types": "^29.3.1",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.14",
    "@types/html-minifier-terser": "^6.1.0",
    "@types/node": "^18.11.9",
    "@types/offscreencanvas": "^2019.7.0",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "concurrently": "^7.5.0",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "express": "^4.18.2",
    "gh-pages": "^4.0.0",
    "jest": "^29.3.1",
    "pg": "^8.8.0",
    "prettier": "^2.7.1",
    "sequelize": "^6.25.5",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "~4.8.4",
    "umzug": "^3.2.1"
  },
  "dependencies": {
    "@types/uuid": "^8.3.4",
    "jsonwebtoken": "^8.5.1"
  }
}
